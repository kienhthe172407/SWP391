<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
    
    <!-- Contract Management Servlets -->
    <servlet>
        <servlet-name>ViewContractsServlet</servlet-name>
        <servlet-class>controller.contractMgt.ViewContractsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContractsServlet</servlet-name>
        <url-pattern>/contracts/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.CreateContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateContractServlet</servlet-name>
        <url-pattern>/contracts/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ApproveContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.ApproveContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApproveContractServlet</servlet-name>
        <url-pattern>/contracts/approve</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContractDetailServlet</servlet-name>
        <servlet-class>controller.contractMgt.ViewContractDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContractDetailServlet</servlet-name>
        <url-pattern>/contracts/detail</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.DeleteContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteContractServlet</servlet-name>
        <url-pattern>/contracts/delete</url-pattern>
    </servlet-mapping>
    
    <!-- Job Posting Management Servlets -->
    <servlet>
        <servlet-name>ViewJobPostingsServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.ViewJobPostingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobPostingsServlet</servlet-name>
        <url-pattern>/job-postings/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ViewJobPostingDetailServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.ViewJobPostingDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobPostingDetailServlet</servlet-name>
        <url-pattern>/job-postings/detail</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.CreateJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.DeleteJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.EditJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/edit</url-pattern>
    </servlet-mapping>

    <!-- Employee Management Servlets -->
    <servlet>
        <servlet-name>ViewEmployeesServlet</servlet-name>
        <servlet-class>controller.employeeMgt.ViewEmployeesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewEmployeesServlet</servlet-name>
        <url-pattern>/employees/list</url-pattern>
    </servlet-mapping>

    <!-- Development Tools section removed -->
</web-app>
