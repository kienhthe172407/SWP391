<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>controller.auth.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.auth.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/auth/forgot-password</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PermissionSettingsServlet</servlet-name>
        <servlet-class>controller.auth.PermissionSettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PermissionSettingsServlet</servlet-name>
        <url-pattern>/permission-settings</url-pattern>
    </servlet-mapping>
    
    <!-- Default Servlet for Static Resources -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpeg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.woff2</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
    
    <!-- Contract Management Servlets -->
    <servlet>
        <servlet-name>ViewContractsServlet</servlet-name>
        <servlet-class>controller.contractMgt.ViewContractsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContractsServlet</servlet-name>
        <url-pattern>/contracts/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.CreateContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateContractServlet</servlet-name>
        <url-pattern>/contracts/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ApproveContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.ApproveContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApproveContractServlet</servlet-name>
        <url-pattern>/contracts/approve</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContractDetailServlet</servlet-name>
        <servlet-class>controller.contractMgt.ViewContractDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContractDetailServlet</servlet-name>
        <url-pattern>/contracts/detail</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteContractServlet</servlet-name>
        <servlet-class>controller.contractMgt.DeleteContractServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteContractServlet</servlet-name>
        <url-pattern>/contracts/delete</url-pattern>
    </servlet-mapping>
    
    <!-- Job Posting Management Servlets -->
    <servlet>
        <servlet-name>ViewJobPostingsServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.ViewJobPostingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobPostingsServlet</servlet-name>
        <url-pattern>/job-postings/list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ViewJobPostingDetailServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.ViewJobPostingDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobPostingDetailServlet</servlet-name>
        <url-pattern>/job-postings/detail</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.CreateJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.DeleteJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditJobPostingServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.EditJobPostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditJobPostingServlet</servlet-name>
        <url-pattern>/job-postings/edit</url-pattern>
    </servlet-mapping>

    <!-- Employee Management Servlets -->
    <servlet>
        <servlet-name>ViewEmployeesServlet</servlet-name>
        <servlet-class>controller.employeeMgt.ViewEmployeesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewEmployeesServlet</servlet-name>
        <url-pattern>/employees/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddEmployeeInformationServlet</servlet-name>
        <servlet-class>controller.employeeMgt.AddEmployeeInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployeeInformationServlet</servlet-name>
        <url-pattern>/employees/addInformation</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditEmployeeInformationServlet</servlet-name>
        <servlet-class>controller.employeeMgt.EditEmployeeInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditEmployeeInformationServlet</servlet-name>
        <url-pattern>/employees/edit</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>controller.employeeMgt.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/employees/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ViewEmployeeDetailServlet</servlet-name>
        <servlet-class>controller.employeeMgt.ViewEmployeeDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewEmployeeDetailServlet</servlet-name>
        <url-pattern>/employees/detail</url-pattern>
    </servlet-mapping>

    <!-- Public Job Application Servlets (Guest Access) -->

    <servlet>
        <servlet-name>ViewPublicJobDetailServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.ViewPublicJobDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewPublicJobDetailServlet</servlet-name>
        <url-pattern>/jobs/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitJobApplicationServlet</servlet-name>
        <servlet-class>controller.jobPostingMgt.SubmitJobApplicationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitJobApplicationServlet</servlet-name>
        <url-pattern>/jobs/apply</url-pattern>
    </servlet-mapping>

    <!-- Development Tools section removed -->
</web-app>
